<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:wp="http://schemas.android.com/apk/res/com.weipai"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/titleBar"
                  android:background="@drawable/topbg"
                  android:layout_width="320dip" android:orientation="horizontal"
                  android:layout_height="55dip" android:paddingTop="6.4dip"
                  android:paddingBottom="2.4dip" android:paddingLeft="3.5dip" android:paddingRight="3.5dip"
            >
        <LinearLayout android:layout_width="95dip" android:layout_height="wrap_content" android:gravity="left">

        </LinearLayout>
        <TextView android:id="@+id/topBarTitle" android:textColor="#FFFFFF"
                  android:textSize="22dip" android:text="@string/share"
                  android:layout_width="123dip" android:layout_height="wrap_content"
                  android:gravity="center"/>
        <LinearLayout android:layout_width="95dip" android:layout_height="wrap_content" android:gravity="right">
            <ImageButton android:id="@+id/rightButton" android:src="@drawable/tencent_account" android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/mainContent" android:background="#D6E3F3" android:orientation="vertical"
                  android:layout_width="fill_parent" android:paddingLeft="10dip" android:paddingRight="10dip"
                  android:paddingTop="6dip"
                  android:layout_height="530dip"
            >
        <LinearLayout android:id="@+id/detailWrapper"
                      android:layout_width="fill_parent"
                      android:layout_height="74dip"
                      android:orientation="vertical"
                >
            <TextView android:layout_width="fill_parent" android:textColor="#575350"
                      android:layout_height="wrap_content" android:text="2011-03-24 08:00 长宁区 四川北路"
                      android:textSize="12dip" android:layout_marginBottom="2dip"></TextView>
            <LinearLayout android:id="@+id/detail"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:orientation="horizontal"
                    >
                <ImageView android:src="@drawable/preview" android:scaleType="centerInside"
                           android:adjustViewBounds="true" android:maxWidth="80dip"
                           android:layout_width="wrap_content" android:layout_height="fill_parent"></ImageView>
                <LinearLayout android:layout_marginLeft="10dip" android:id="@+id/comment"
                              android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:orientation="vertical">
                    <TextView android:id="@+id/fromName" android:textColor="#131614" android:layout_width="fill_parent"
                              android:text="潘石屹:" android:textSize="18dip"
                              android:layout_height="0dip" android:layout_weight="37" android:gravity="top"></TextView>
                    <TextView android:layout_width="fill_parent" android:textColor="#43679A"
                              android:text="这地方不错，我经常去吃，在五角场那边" android:textSize="15dip"
                              android:layout_height="0dip" android:layout_weight="63"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/publishSource" android:layout_marginTop="20dip"
                      android:layout_width="fill_parent" android:background="@drawable/round" android:padding="1dip"
                      android:layout_height="91dip" android:orientation="vertical"
                >
            <LinearLayout android:layout_width="fill_parent" android:layout_height="44dip"
                          android:background="@drawable/upperround" android:paddingLeft="7dip"
                          android:layout_marginBottom="1dip" android:orientation="horizontal">
                <ImageView android:layout_gravity="center_vertical" android:layout_margin="3dip"
                           android:src="@drawable/sina" android:layout_width="wrap_content"
                           android:layout_height="wrap_content" android:adjustViewBounds="true"
                           android:maxWidth="35dip"></ImageView>
                <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:text="新浪微博"
                          android:textColor="#010101" android:textSize="18dip"></TextView>

            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:background="@drawable/lowerround"
                          android:layout_height="44dip"
                          android:orientation="horizontal" android:paddingLeft="7dip">
                <ImageView android:layout_gravity="center_vertical" android:layout_margin="3dip"
                           android:src="@drawable/tencent_account" android:layout_width="wrap_content"
                           android:layout_height="wrap_content" android:adjustViewBounds="true"
                           android:maxWidth="35dip"></ImageView>
                <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:text="腾讯微博"
                          android:textColor="#010101" android:textSize="18dip"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/commandBar" android:layout_marginTop="20dip"
                      android:layout_width="fill_parent" android:orientation="horizontal"
                      android:layout_height="182dip" android:background="#D6E3F3"
                >
            <LinearLayout android:layout_width="145dip" android:orientation="vertical"
                          android:layout_height="87dip">
                <ImageView android:layout_height="55dip" android:layout_width="wrap_content"
                           android:scaleType="centerInside" android:src="@drawable/share"></ImageView>
                <TextView android:layout_gravity="center" android:gravity="top" android:layout_height="19dip"
                          android:layout_width="wrap_content" android:text="2099次"
                          android:textColor="#010101" android:textSize="15dip"/>
            </LinearLayout>
            <LinearLayout android:layout_marginLeft="7dip" android:layout_width="145dip"
                          android:orientation="vertical"
                          android:layout_height="87dip">
                <ImageView android:layout_height="55dip" android:layout_width="wrap_content" android:id="@+id/play_button"
                           android:scaleType="centerInside" android:src="@drawable/play"></ImageView>
                <TextView android:layout_gravity="center" android:gravity="top" android:layout_height="19dip"
                          android:layout_width="wrap_content" android:text="2099次"
                          android:textColor="#010101" android:textSize="15dip"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <!--<include layout="@layout/bottombar"/>-->
</LinearLayout>