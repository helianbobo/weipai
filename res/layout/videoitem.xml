<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="320dip"
              android:layout_height="match_parent" android:paddingLeft="10dip" android:paddingTop="2dip">
    <ImageView android:id="@+id/previewImage" android:layout_height="wrap_content" android:layout_width="75dip"
               android:scaleType="centerInside" android:src="@drawable/preview"
               android:layout_gravity="left"></ImageView>
    <LinearLayout android:layout_width="245dip" android:layout_height="70dip" android:paddingLeft="6dip" android:paddingTop="3dip"
                  android:orientation="vertical">
        <TextView android:id="@+id/previewTitle" android:layout_height="20dip" android:layout_width="wrap_content"
                  android:textColor="#0768BF" android:textSize="15dip"></TextView>
        <LinearLayout android:layout_width="200dip" android:layout_height="27dip"
                      android:orientation="horizontal" android:paddingTop="3dip" android:paddingBottom="5dip">
            <TextView android:id="@+id/previewFrom" android:layout_height="match_parent" android:layout_width="wrap_content"
                      android:textSize="15dip" android:textColor="#00ADC8"></TextView>
            <TextView android:layout_marginLeft="5dip" android:id="@+id/previewDesc" android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:textSize="15dip" android:textColor="#232323"></TextView>

        </LinearLayout>

        <TextView android:id="@+id/previewSocialInfo" android:layout_height="16dip" android:layout_width="wrap_content"
                  android:textColor="#232323" android:textSize="13dip"></TextView>
    </LinearLayout>
</LinearLayout>