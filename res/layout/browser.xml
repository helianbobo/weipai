<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:wp="http://schemas.android.com/apk/res/com.weipai"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/titleBar"
                  android:background="@drawable/topbg"
                  android:layout_width="320dip" android:orientation="horizontal"
                  android:layout_height="55dip" android:paddingTop="6.4dip"
                  android:paddingBottom="2.4dip" android:paddingLeft="3.5dip" android:paddingRight="3.5dip"
            >
        <LinearLayout android:layout_width="95dip" android:layout_height="wrap_content" android:gravity="left">
            <ImageButton android:id="@+id/leftButton" android:src="@drawable/btn_return" android:background="@null"
                    android:layout_width="wrap_content" android:minWidth="40dip"
                    android:layout_height="wrap_content" android:layout_gravity="left"/>
        </LinearLayout>
        <TextView android:id="@+id/topBarTitle" android:textColor="#FFFFFF"
                  android:textSize="22dip" android:text="@string/updates"
                  android:layout_width="123dip" android:layout_height="wrap_content"
                  android:gravity="center"/>
        <LinearLayout android:layout_width="95dip" android:layout_height="wrap_content" android:gravity="right">
            <ImageButton android:id="@+id/rightButton" android:src="@drawable/refresh"  android:background="@null"
                    android:layout_width="wrap_content"  android:minWidth="40dip"
                    android:layout_height="wrap_content" android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/mainContent" android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="530dip" android:background="#FFFFFF"
            >
        <ListView android:id="@+id/videoList" android:layout_width="fill_parent"
                  android:layout_height="fill_parent"></ListView>
    </LinearLayout>
    <!--<include layout="@layout/bottombar"/>-->
</LinearLayout>