<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal"
        >
    <SurfaceView
        android:id="@+id/camaraPreview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_x="10px"
        android:layout_y="10px" />

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_marginLeft="-150dp">

        <Button android:layout_marginTop="50dp" android:id="@+id/recordControlButton"
                android:text="Start Recording" android:layout_height="60dp" android:layout_width="100dp"/>
        <TextView android:layout_marginTop="50dp"
                  android:layout_marginLeft="10dp"
                  android:layout_height="60dp"
                  android:layout_width="wrap_content"
                  android:id="@+id/videoLength"
                  android:text="3:00"
                  android:textColor="@color/gray"
                />

    </LinearLayout>

</LinearLayout>