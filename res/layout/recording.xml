<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal"
        >
    <SurfaceView
        android:id="@+id/camaraPreview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_x="10px"
        android:layout_y="10px" />

    <ImageView android:src="@drawable/recording_logo" android:layout_height="wrap_content" android:layout_width="wrap_content"
               android:layout_marginLeft="-500dp" android:layout_marginBottom="180dp"/>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
            android:layout_marginLeft="200dp" android:layout_marginTop="200dp">

        <Button android:id="@+id/recordControlButton"
                android:background="@drawable/start" android:layout_height="68dp" android:layout_width="68dp"/>
        <TextView
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="20dp"
                  android:layout_height="60dp"
                  android:layout_width="wrap_content"
                  android:id="@+id/videoLength"
                  android:text="0:00"
                  android:textSize="40dp"
                  android:textColor="@color/gray"
                />

    </LinearLayout>

</LinearLayout>